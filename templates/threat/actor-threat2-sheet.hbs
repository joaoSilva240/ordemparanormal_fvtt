<section class="{{actor.type}} op-threat2-sheet" id="threat2" autocomplete="off">
	<div class="op-threat2-sheet__noise"></div>
	<div class="op-threat2-sheet__container">
		<header class="op-threat2-sheet__header">
			<input
				type="text"
				name="name"
				value="{{actor.name}}"
				placeholder="NOME DA CRIATURA"
				class="op-threat2-sheet__name"
			/>
			<div class="op-threat2-sheet__logo">
				<span>ORDEM</span>
				<span>PARANORMAL</span>
			</div>
		</header>

		

		<div class="op-threat2-sheet__grid">
			<div class="op-threat2-sheet__left">
				<div class="op-threat2-sheet__badge">
					<div class="op-threat2-sheet__badge-main">
						<div class="op-threat2-sheet__badge-name">
							{{#if actor.name}}{{actor.name}}{{else}}Nome da Criatura{{/if}}
						</div>
						<input
							type="text"
							name="system.elements.main"
							value="{{system.elements.main}}"
							placeholder="*ELEMENTO*"
							class="op-threat2-sheet__badge-element"
						/>
					</div>

					<div class="op-threat2-sheet__badge-vd">
						<span>VD</span>
						<input
							type="number"
							name="system.attributes.vd.value"
							value="{{system.attributes.vd.value}}"
							data-dtype="Number"
							placeholder="000"
						/>
					</div>

					<div class="op-threat2-sheet__badge-row">
						<span>PARANORMAL</span>
						<span class="op-threat2-sheet__badge-dot">♦</span>
						<input
							type="text"
							name="system.size"
							value="{{system.size}}"
							placeholder="Tamanho da Criatura"
						/>
					</div>
				</div>

				<div class="op-threat2-sheet__section">
					<div class="op-threat2-sheet__section-title">ATRIBUTOS</div>
					<div class="op-threat2-sheet__attributes">
						<div class="op-threat2-sheet__attr">
							<span>AGI</span>
							<div class="op-threat2-sheet__hex">
								<input type="number" name="system.attributes.dex.value" value="{{system.attributes.dex.value}}" data-dtype="Number" />
							</div>
						</div>
						<div class="op-threat2-sheet__attr">
							<span>FOR</span>
							<div class="op-threat2-sheet__hex">
								<input type="number" name="system.attributes.str.value" value="{{system.attributes.str.value}}" data-dtype="Number" />
							</div>
						</div>
						<div class="op-threat2-sheet__attr">
							<span>INT</span>
							<div class="op-threat2-sheet__hex">
								<input type="number" name="system.attributes.int.value" value="{{system.attributes.int.value}}" data-dtype="Number" />
							</div>
						</div>
						<div class="op-threat2-sheet__attr">
							<span>PRE</span>
							<div class="op-threat2-sheet__hex">
								<input type="number" name="system.attributes.pre.value" value="{{system.attributes.pre.value}}" data-dtype="Number" />
							</div>
						</div>
						<div class="op-threat2-sheet__attr">
							<span>VIG</span>
							<div class="op-threat2-sheet__hex">
								<input type="number" name="system.attributes.vit.value" value="{{system.attributes.vit.value}}" data-dtype="Number" />
							</div>
						</div>
					</div>
				</div>

				<div class="op-threat2-sheet__hp">
					<div class="op-threat2-sheet__hp-label">PONTOS DE VIDA</div>
					<input type="number" name="system.attributes.hp.value" value="{{system.attributes.hp.value}}" data-dtype="Number" />
				</div>

				<div class="op-threat2-sheet__resistances">
					<div class="op-threat2-sheet__line">
						<span>Imunidades</span>
						<input type="text" name="system.temporary.defense.skillResistances" value="{{system.temporary.defense.skillResistances}}" placeholder="Lista de imunidades..." />
					</div>
					<div class="op-threat2-sheet__line">
						<span>Resistencias</span>
						<input type="text" name="system.temporary.defense.damageResistances" value="{{system.temporary.defense.damageResistances}}" placeholder="Lista de resistencias..." />
					</div>
					<div class="op-threat2-sheet__line">
						<span>Vulnerabilidades</span>
						<input type="text" name="system.temporary.vulnerabilities" value="{{system.temporary.vulnerabilities}}" placeholder="Lista de vulnerabilidades..." />
					</div>
				</div>

				<div class="op-threat2-sheet__defenses">
					<div class="op-threat2-sheet__defenses-header">
						<span>DEFESA</span>
						<input type="number" name="system.defense.value" value="{{system.defense.value}}" data-dtype="Number" />
					</div>
					<div class="op-threat2-sheet__defenses-row">
						<span>FORTITUDE</span>
						<div>
							<input type="number" name="system.defense.fortitude.base" value="{{system.defense.fortitude.base}}" data-dtype="Number" />
							<span>d20 +</span>
							<input type="number" name="system.defense.fortitude.mod" value="{{system.defense.fortitude.mod}}" data-dtype="Number" />
						</div>
					</div>
					<div class="op-threat2-sheet__defenses-row">
						<span>REFLEXOS</span>
						<div>
							<input type="number" name="system.defense.reflex.base" value="{{system.defense.reflex.base}}" data-dtype="Number" />
							<span>d20 +</span>
							<input type="number" name="system.defense.reflex.mod" value="{{system.defense.reflex.mod}}" data-dtype="Number" />
						</div>
					</div>
					<div class="op-threat2-sheet__defenses-row">
						<span>VONTADE</span>
						<div>
							<input type="number" name="system.defense.will.base" value="{{system.defense.will.base}}" data-dtype="Number" />
							<span>d20 +</span>
							<input type="number" name="system.defense.will.mod" value="{{system.defense.will.mod}}" data-dtype="Number" />
						</div>
					</div>
				</div>

				<div class="op-threat2-sheet__movement">
					<div class="op-threat2-sheet__movement-label">DESLOCAMENTO</div>
					<div class="op-threat2-sheet__movement-values">
						<div>
							<input type="number" name="system.attributes.movement.walk" value="{{system.attributes.movement.walk}}" data-dtype="Number" />
							<span>m</span>
						</div>
						<div class="op-threat2-sheet__divider"></div>
						<div>
							<input type="number" name="system.attributes.movement.squares" value="{{system.attributes.movement.squares}}" data-dtype="Number" />
							<span class="op-threat2-sheet__square">□</span>
						</div>
					</div>
				</div>

				<div class="op-threat2-sheet__section">
					<div class="op-threat2-sheet__section-title">COMBATE</div>
					<div class="op-threat2-sheet__combat">
						<div>
							<span>Percepcao</span>
							<div>
								<input type="number" name="system.perception.base" value="{{system.perception.base}}" data-dtype="Number" placeholder="0" />
								<span>d20 +</span>
								<input type="number" name="system.perception.mod" value="{{system.perception.mod}}" data-dtype="Number" placeholder="0" />
							</div>
						</div>
						<div>
							<span>Iniciativa</span>
							<div>
								<input type="number" name="system.initiative.base" value="{{system.initiative.base}}" data-dtype="Number" placeholder="0" />
								<span>d20 +</span>
								<input type="number" name="system.initiative.mod" value="{{system.initiative.mod}}" data-dtype="Number" placeholder="0" />
							</div>
						</div>
					</div>
				</div>

				<div class="op-threat2-sheet__presence">
					<div class="op-threat2-sheet__presence-header">
						<h3>PRESENCA PERTURBADORA</h3>
						<div>
							<span>NEX</span>
							<input type="text" name="system.disturbingPresence.immuneNex" value="{{system.disturbingPresence.immuneNex}}" placeholder="000%" />
						</div>
					</div>
					<div class="op-threat2-sheet__presence-body">
						<div>
							<span>DANO</span>
							<input type="text" name="system.disturbingPresence.mentalDamage" value="{{system.disturbingPresence.mentalDamage}}" placeholder="00d00 mental" />
						</div>
						<div>
							<span>RESISTENCIA DT</span>
							<input type="text" name="system.disturbingPresence.dt" value="{{system.disturbingPresence.dt}}" placeholder="000" />
						</div>
					</div>
				</div>
			</div>

			<div class="op-threat2-sheet__right">
				<div class="op-threat2-sheet__section-title">CARACTERISTICAS & ACOES</div>
				<div class="op-threat2-sheet__abilities">
					<p>** Aqui sao descritas as Caracteristicas da Criatura **</p>
					<textarea name="system.temporary.abilities" placeholder="EXEMPLO:&#10;&#10;PERCEPCAO SENSORIAL - O zumbi de sangue nao depende da visao...">{{system.temporary.abilities}}</textarea>
				</div>
				<div class="op-threat2-sheet__separator"></div>
				<div class="op-threat2-sheet__actions">
				<div class="op-threat2-sheet__actions-header">
					<p>** Aqui sao descritas as Acoes da Criatura **</p>
					{{#if @root.editable}}
						<div class="op-threat2-sheet__actions-add">
							<button type="button" data-action="createDoc" data-document-class="Item" data-type="ability">+ Habilidade</button>
							<button type="button" data-action="createDoc" data-document-class="Item" data-type="ritual">+ Ritual</button>
							<button type="button" data-action="createDoc" data-document-class="Item" data-type="armament">+ Armamento</button>
							<button type="button" data-action="createDoc" data-document-class="Item" data-type="generalEquipment">+ Equipamento</button>
							<button type="button" data-action="createDoc" data-document-class="Item" data-type="protection">+ Protecao</button>
						</div>
					{{/if}}
				</div>
				<ol class="items-list">
					{{#each actions as |item id|}}
						<li class="item flexrow draggable" data-drag="true" data-document-class="Item" data-item-id="{{item._id}}">
							<div class="item-name">
								<div class="item-image">
									<a class="rollable" data-roll-type="item" data-action="onRoll">
										<img src="{{item.img}}" title="{{item.name}}" width="24" height="24" />
									</a>
								</div>
								<h4 data-tooltip="{{item.name}}">{{item.name}}</h4>
							</div>
							<div class="item-controls">
								<a class="item-control item-edit" data-action="viewDoc" title="Editar"><i class="fas fa-edit"></i></a>
								<a class="item-control" data-action="deleteDoc" title="Excluir"><i class="fas fa-trash"></i></a>
							</div>
						</li>
					{{/each}}
				</ol>
				{{#unless actions.length}}
					<div class="op-threat2-sheet__actions-empty">Nenhuma acao registrada.</div>
				{{/unless}}
			</div>
			</div>
		</div>

		<footer class="op-threat2-sheet__footer">
			<span>Criatura criada por</span>
			<input type="text" name="system.details.creator" value="{{system.details.creator}}" placeholder="Nome do criador" />
			<span class="op-threat2-sheet__footer-note">Ficha criada por Magic Patterns</span>
		</footer>
	</div>
</section>
